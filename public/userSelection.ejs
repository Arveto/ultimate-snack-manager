<div class="box">
  <div class="column is-12">
    <header class="card-header">
      <p class="title">
        Prendre commande pour :
      </p>
      <a href="#" class="card-header-icon" aria-label="more options">
      </a>
    </header>
    <div class="card-content">
      <div class="content">
        <div class="control has-icons-left has-icons-right">
          <input class="input is-large" type="text" placeholder="">
          <span class="icon is-medium is-left">
            <i class="fa fa-search"></i>
          </span>
          <span class="icon is-medium is-right">
            <i class="fa fa-check"></i>
          </span>
        </div>
      </div>
    </div>


    <%
      users.forEach((user)=>{
    %>
      <article class="media">
        <figure class="media-left">
          <p class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/128x128.png">
          </p>
        </figure>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= user.name %></strong><br/>
              <small>PO : <a><%= user.money %>€</a>
                <%
                  if(user.hasOrdered) {  //Display the red bell
                %>
                   · <button class="button is-small is-danger"><i class="fa fa-bell"></i></button>
                <%
                  }
                %>
              </small>
            </p>
          </div>
        </div>
        <div class="media-right">
          <button class=<% if (theme=='BLUE'){ %> "button is-large is-success" <% }else{ %> "button is-large is-danger" <% } %> >
              <span class="icon is-large is-left">
                <i class="fa fa-arrow-right"></i>
              </span>
            </button>
        </div>
      </article>
      <%
      })
    %>

  </div>
</div>
