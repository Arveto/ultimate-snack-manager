<div class="box">
    <div class="column is-12">
        <header class="card-header">
            <p class="title">
                Prendre commande pour :
            </p>
            <a href="#" class="card-header-icon" aria-label="more options">
            </a>
        </header>
        <div class="card-content">
            <div class="content">
                <div class="control has-icons-left has-icons-right">
                    <input id="adminUsersInput" class="input is-large" type="text" placeholder="">
                    <span class="icon is-medium is-left">
                        <i class="fa fa-search"></i>
                    </span>
                    <span class="icon is-medium is-right">
                        <i class="fa fa-check"></i>
                    </span>
                </div>
            </div>
        </div>

        <%
        let i=0;
        users.forEach((user)=>{
            %>
            <article class="media user<%=user.id%>">
                <figure class="media-left">
                    <p class="image is-48x48">
                        <img src="https://bulma.io/images/placeholders/128x128.png">
                    </p>
                </figure>
                <div class="media-content columns">
                    <div class="content column">
                        <p>
                            <strong><%= user.name %></strong><small class="<%=user.id%> admin-in-charge"></small><br/>
                            <small>Solde : <a><%= user.money %>â‚¬</a>
                            </small>
                        </p>
                    </div>
                    <div class="column"></div>
                    <div class="column has-text-centered <%= user.id %> action_toggleSetAdminUser adminUserAction">
                      <p class="heading">
                        Cafetier
                      </p>
                      <p class="subtitle">
                        <i class="fa <% if (user.admin) { %> fa-concierge-bell <% } else { %> fa-times <% } %>"></i>
                      </p>
                    </div>
                    <div class="column has-text-centered <%= user.id %> action_editUser adminUserAction">
                      <p class="heading">
                        Editer
                      </p>
                      <p class="subtitle">
                        <i class="fa fa-user-edit"></i>
                      </p>
                    </div>
                    <div class="column has-text-centered <%= user.id %> action_removeUser adminUserAction">
                      <p class="heading">
                        Supprimer
                      </p>
                      <p class="subtitle">
                        <i class="fa fa-trash"></i>
                      </p>
                    </div>
                </div>
            </article>
            <%
              i++;
            });
            %>
    </div>
</div>
