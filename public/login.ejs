<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Login</h3>
        <p class="subtitle has-text-grey">Oui</p>
        <div class="box">
          <figure class="avatar">
            <img src="https://placehold.it/128x128">
          </figure>
          <form>
            <div class="title">
              <%= user %>
            </div>

            <div class="field">
              <div class="control">
                <input id='password' class="input is-large" type="password" placeholder="Password">
              </div>
            </div>
            <button id="submitLogin" class= <% if(theme=='BLUE'){ %> "button is-block is-info is-large is-fullwidth" <% }else{ %> "button is-block is-danger is-large is-fullwidth" <% } %> >Login</button>
          </form>
        </div>
